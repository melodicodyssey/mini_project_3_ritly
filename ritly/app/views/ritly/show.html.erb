<div class="container">
<div class="jumbotron">
  <div style="display: inline">
    <h1>Your new url is...</h1>
    <input type="text" value="localhost:3000/ritly/go/<%=@page.short_url%>" style="width: 300px">
    <h3>Takes you to...</h3>
    <p><%=@page.entered_url %></p>
    <iframe src="http://<%=@page.entered_url%>"></iframe>
  </div>

  <p>
    </br>
    <%= form_tag ("/ritly/update/#{@page.short_url}"), method: "patch" do %>
      <%= submit_tag "New Rit", :class => "btn btn-lg btn-primary" %>
      </br></br>
      <%= text_field_tag :cust_url, nil, placeholder: "Or type a custom Rit!" %>
    <% end %>
  </p>
</div>
</div>

<%= form_tag (go_path(@page.short_url)), method: "get" do %>
  <% submit_tag "GO!" %>
<%end%>

<a href="/ritly/go/<%=@page.short_url%>">localhost:3000/ritly/go/<%=@page.short_url%></a>

<a href="/ritly/">HOME</a>

